{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "lib": ["dom", "dom.iterable", "es2024", "ESNext.Array", "ESNext.Collection", "ESNext.Iterator"],
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "resolveJsonModule": true,
    "types": ["mocha"]
  },
  "include": ["assets", "integration", "src", "test", "visual-regression", "*.ts"]
}
